<script>
  let bulan = "<%- bulan %>";
  let tahun = "<%- tahun %>";
  let environment = "<%- environment %>"

  // console.log(typeof bulan, typeof tahun);

  function getEventTarget(e) {
    e = e || window.event;
    return e.target || e.srcElement;
  }

  //terdaftar
  var ul = document.getElementById("dropdownTerdaftarMonthlyMonth");
  ul.onclick = function(event) {
    var target = getEventTarget(event);
    bulan = target.innerHTML;
    document.getElementById("headerTerdaftarMonthly").innerHTML =
      "Job Terdaftar" + " " + bulan + " " + tahun + " " + environment;
    if (environment === "BCAPROD") {
      chartTerdaftarBulanan.destroy();
      createChartTerdaftarBulananMF();
    } else {
      chartTerdaftarBulanan.destroy();
      createChartTerdaftarBulananOS();
    }
  };

  //terdaftar tahun
  var ul = document.getElementById("dropdownTerdaftarMonthlyYear");
  ul.onclick = function(event) {
    var target = getEventTarget(event);
    tahun = target.innerHTML;
    document.getElementById("headerTerdaftarMonthly").innerHTML =
      "Job Terdaftar" + " " + bulan + " " + tahun + " " + environment;
    if (environment === "BCAPROD") {
      chartTerdaftarBulanan.destroy();
      createChartTerdaftarBulananMF();
    } else {
      chartTerdaftarBulanan.destroy();
      createChartTerdaftarBulananOS();
    }
  };


  //terdaftar environment
  var ulenv = document.getElementById("dropdownTerdaftarMonthlyEnvironment");
  ulenv.onclick = function(event) {
    var target = getEventTarget(event);
    environment = target.title;
    document.getElementById("headerTerdaftarMonthly").innerHTML =
      "Job Terdaftar" + " " + bulan + " " + tahun + " " + environment;

    // console.log(environment)

    if (environment === "BCAPROD") {
      chartTerdaftarBulanan.destroy();
      createChartTerdaftarBulananMF();
    } else {
      chartTerdaftarBulanan.destroy();
      createChartTerdaftarBulananOS();
    }

    // console.log(environment)
  };


  //terdaftar
  async function getDataTerdaftarBulanan(url) {
    const response = await fetch(url, {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        bulan,
        tahun,
        environment
      }),
    });

    let data = await response.json();
    console.log(await response.status);
    return data;
  }
</script>

